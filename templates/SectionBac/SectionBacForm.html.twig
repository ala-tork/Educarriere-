{% extends 'dashbord_ctrl/DashbordBase.html.twig' %}
{% block MainBody %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Dashboard</h1>
                    </div><!-- /.col -->

                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="card" style="min-height: 400px;" >
            <!-- /.card-header -->
            <div class="card-body" >
                <!-- Main content -->
                <section class="content" >
                    <div class="container-sm">

                        <!-- Small boxes (Stat box) -->
                        <div class="row justify-content-md-center" >
                            <div class="col-md-8">
                                {{ form_start(form) }}
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Nom Du Specialiter</label>
                                    {{ form_widget(form.SectionBacName,{'attr':{'placeholder':'Nom Du Specialiter',"class":"form-control"}}) }}
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="{{ button }}" class="btn float-right btn-outline-success">
                                </div>

                                {{ form_end(form) }}
                            </div>
                        </div>

                    </div><!-- /.container-fluid -->
                </section>
            </div>
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
{% endblock %}


