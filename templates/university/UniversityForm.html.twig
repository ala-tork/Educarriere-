{% extends 'dashbord_ctrl/DashbordBase.html.twig' %}
{% block Syle %}

{% endblock %}
{% block MainBody %}

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0">Dashboard</h1>
                    </div><!-- /.col -->

                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <div class="card" style="min-height: 400px;" >
            <!-- /.card-header -->
            <div class="card-body" >
                <!-- Main content -->
                <section class="content" >
                    <div class="container-sm">

                        <!-- Small boxes (Stat box) -->
                        <div class="row justify-content-md-center" >
                            <div class="col-md-8">
                                <div class="container">
                                    {{ form_start(form) }}
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">university</label>
                                        {{ form_widget(form.UniversityName,{'attr':{'placeholder':'university name',"class":"form-control"}}) }}
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">ville</label>
                                        {{ form_widget(form.ville,{'attr':{'placeholder':'',"class":"form-control -select2"}}) }}
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleInputEmail1" class="form-label">Specialiter</label>
                                        {{ form_widget(form.filiere,{'attr':{'placeholder':'Nom Du Specialiter',"class":"form-control -select2"}}) }}
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="{{ button }}" class="btn-lg float-right btn-success m-4">
                                    </div>
                                    <div class="form-group">
                                        <a href="{{ path('List_universitys') }}" class="btn-lg float-right btn-secondary m-4" formnovalidate>Cancel </a>
                                    </div>

                                    {{ form_end(form) }}


                                </div>
                            </div>
                        </div>

                    </div><!-- /.container-fluid -->
                </section>
            </div>
        </div>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {% block Scripts %}
        <script>
            $(document).ready(function() {
                $('.-select2').select2({
                    placeholder:' '
                });
            });
        </script>
    {% endblock %}
{% endblock %}


