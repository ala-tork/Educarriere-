{% extends 'FrontOfficeTemplate/BaseForntOfficeTemplate.html.twig' %}
{% block Body %}
<div id="main">
        <!-- ======= About Us Section ======= -->
        <section id="about" class="about">
            <div class="container" data-aos="fade-up">
                <div class="section-title">
                    <h2>{% set formtype, year = 'Calculateur Score BAC ', '2023' %}
                        {{ formtype }}{{ year }}
                    </h2>
                </div>
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        {{ form_row(form.MG,{'attr':{'placeholder':'put your general moyenne',"class":"form-control"}}) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.moyenne_science,{'attr':{'placeholder':'put your science moyenne',"class":"form-control"}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.moyenne_anglais,{'attr':{'placeholder':'put your english moyenne',"class":"form-control"}}) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.moyenne_francais,{'attr':{'placeholder':'put your frensh moyenne',"class":"form-control"}}) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{ form_row(form.moyenne_math,{'attr':{'placeholder':'put your math moyenne',"class":"form-control"}}) }}
                    </div>
                    <div class="col">
                        {{ form_row(form.moyenne_physique,{'attr':{'placeholder':'put your math moyenne',"class":"form-control"}}) }}
                    </div>
                </div>
                {% if score is not empty %}
                    <div class="row">
                        <div class="col">
                            votre score est : {{ score }}
                        </div>
                    </div>
                {% endif %}
                {% if SCORRE is not empty %}
                    <div class="row">
                        <div class="col">
                            votre score + 7% est : {{ SCORRE }}
                        </div>
                    </div>
                {% endif %}
                <div class="container px-4 text-center">
                    <div class="row gx-5">
                        <div class="col">
                            <input type="submit" value="calculer" class="btn float-right btn-outline-success"/>
                        </div>
                        <div class="col">
                            <a href="{{ path("calculateur_score") }}" class="btn float-right btn-outline-secondary">Cancel</a>
                        </div>
                    </div>
                </div>
                {{ form_end(form,{render_rest:false}) }}
            </div>
        </section>
        <!-- End About Us Section -->
    </div>

{% endblock %}






